@using WebJobPortal.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Layout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a href="~/ServiceOffer/Index"><img src="~/Pictures/logo.png" alt="logo" id="logo" style="width:auto;height:20px;border:0;"></a></li>
                    <li>@Html.ActionLink("Home", "Index", "ServiceOffer")</li>
                    <li>@Html.ActionLink("Profile", "UserProfile", "User")</li>

                    <!--menu items-->
                    <li><button id="login-btn" class="loginBtn">Login</button></li>
                    <!-- The Modal -->

                    <li>@Html.ActionLink("Sign up", "Create", "User")</li>


                   @*
                    <li class="search">
                        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                        {
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "phone" });
                            <input type="submit" value="Search">
                        }
                    </li>*@
                </ul>
            </div>
        </div>
    </div>
    <div id="login-modal" class="loginModal">
        <!-- Modal content -->
       @Html.Partial("Login", new UserModel())
            
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Job Portal</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        /* modals - popup windows*/
        // Get the modalS
        var loginModal = document.getElementById('login-modal');

        // Get the button that opens the modal
        var openLoginBtn = document.getElementById("login-btn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks the button, open the modal
        openLoginBtn.onclick = function () {
            loginModal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            loginModal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == loginModal) {
                loginModal.style.display = "none";
            }
        }
    </script>
</body>
</html>
