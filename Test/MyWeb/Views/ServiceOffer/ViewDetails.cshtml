@model MyWeb.Models.ManageOffers

@{
    ViewBag.Title = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.Id)
<div class="form-horizontal">
    <div class="form-group">



        @Html.LabelFor(model => model.Title)

        <div class="col-md-12">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RatePerHour)

        <div class="col-md-12">
            @Html.EditorFor(model => model.RatePerHour)
            @Html.ValidationMessageFor(model => model.RatePerHour, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)

        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Description, new { style = "width:250px;" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.ActionLink("Author", "UserProfile", "User", new { id = Model.Author }, null)
        @Html.DisplayTextFor(model => model.Author)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Save", "Edit","ServiceOffer", new { edited = Model }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Edit", "ServiceOffer", new { edited = Model.Id }, new { @class = "btn btn-danger" })
            
        </div>
    </div>





</div>
